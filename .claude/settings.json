{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/ai-supervisor.sh pre \"$TOOL_NAME\" \"$TOOL_INPUT\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/ai-supervisor.sh post \"$TOOL_NAME\" \"$TOOL_OUTPUT\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '\\n[SUPERVISOR] 任務結束 - 請確認所有步驟已完成\\n'"
          }
        ]
      }
    ]
  }
}
