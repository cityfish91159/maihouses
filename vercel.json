{
  "buildCommand": "npm run build",
  "outputDirectory": "docs",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/archive-handler",
      "schedule": "0 * * * *"
    }
  ],
  "routes": [
    { "src": "^/$", "status": 308, "headers": { "Location": "/maihouses/" } },
    { "src": "/maihouses/community-wall_mvp.html", "dest": "/maihouses/community-wall_mvp.html" },
    { "src": "/maihouses/(.*)", "dest": "/$1" },
    { "src": "/maihouses", "dest": "/index.html" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
